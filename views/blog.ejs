    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Variables for scroll handling
        let lastScroll = 0;
        const navbar = document.querySelector('.navbar');
        const header = document.querySelector('.header');
        const delta = 5;
        let didScroll = false;

        // Detect scroll and set flag
        window.addEventListener('scroll', function(e) {
            didScroll = true;
        });

        // Check scroll every 250ms
        setInterval(function() {
            if (didScroll) {
                hasScrolled();
                didScroll = false;
            }
        }, 250);

        function hasScrolled() {
            const currentScroll = window.pageYOffset;
            
            if (Math.abs(lastScroll - currentScroll) <= delta) return;

            if (currentScroll > lastScroll && currentScroll > 100) {
                navbar.classList.add('nav-up');
            } else {
                if (currentScroll + window.innerHeight < document.documentElement.scrollHeight) {
                    navbar.classList.remove('nav-up');
                }
            }
            
            lastScroll = currentScroll;
        }

        // Language Selection Functions
        window.toggleDropdown = function() {
            const dropdown = document.getElementById('langDropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }

        window.selectLanguage = function(langCode, langText) {
            document.getElementById('selected-lang').textContent = langText;
            const select = document.querySelector('.goog-te-combo');
            if (select) {
                select.value = langCode;
                select.dispatchEvent(new Event('change'));
            }
            document.getElementById('langDropdown').style.display = 'none';
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.lang-select')) {
                document.getElementById('langDropdown').style.display = 'none';
            }
        });

        // Handle layout adjustments for Google Translate bar
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                    if (document.body.classList.contains('translated-ltr') || 
                        document.body.classList.contains('translated-rtl')) {
                        header.style.top = '40px';
                        navbar.style.top = '100px';
                    } else {
                        header.style.top = '0';
                        navbar.style.top = '60px';
                    }
                }
            });
        });

        observer.observe(document.body, {
            attributes: true,
            attributeFilter: ['class']
        });

        // Update the toggle content function
        window.toggleContent = function(button) {
            const article = button.closest('.blog-card');
            const content = article.querySelector('.blog-detailed-content');
            
            // Close all other open detailed content and reset their cards
            document.querySelectorAll('.blog-card.expanded').forEach(item => {
                if (item !== article) {
                    item.classList.remove('expanded');
                    item.querySelector('.blog-content').style.display = 'block';
                    item.querySelector('.blog-detailed-content').classList.remove('active');
                }
            });

            // Toggle current content
            content.classList.toggle('active');
            article.classList.toggle('expanded');
            
            // Toggle visibility of preview content
            const previewContent = article.querySelector('.blog-content');
            if (article.classList.contains('expanded')) {
                previewContent.style.display = 'none';
            } else {
                previewContent.style.display = 'block';
            }
            
            // Change button text
            button.textContent = article.classList.contains('expanded') ? 'Show Less' : 'Read More';
            
            // Smooth scroll to the article
            article.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
    });
    </script>
