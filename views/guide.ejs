        }

        .navbar ul li a {
            text-decoration: none;
            color: white;
            font-size: 1rem;
            padding: 5px 5px;
            display: inline-block;
        }

        /* Guide Section Styles */
        .guides-section {
            margin-top: 120px;
            padding: 50px 20px;
            background: linear-gradient(to bottom, #f9f9f9, #ffffff);
        }

        .section-header {
